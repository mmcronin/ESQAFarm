{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
   "location": {
    "type": "string"
    },
   "lbName": {
      "type": "string"
    },
   "LBFE": {
      "type": "string"
    },
    "LBBE": {
      "type": "string"
    },
    "ADRDPNAT": {
      "type": "string"
    },
    "SQLRDPNAT": {
      "type": "string"
    },
    "WFERDPNAT": {
      "type": "string"
    },
   "PublicIpResourceId": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "name": "[parameters('LBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[parameters('location')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('LBFE')]",
            "properties": {
              "publicIPAddress": {
                "id": "[parameters('PublicIPResourceId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('LBBE')]"
          }
        ],
        "inboundNatRules": [
          {
            "name": "[parameters('ADRDPNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceid(resourceGroup().name,'Microsoft.Network/loadBalancers',parameters('LBName')), '/frontendIPConfigurations/',parameters('LBFE'))]"
              },
              "protocol": "tcp",
              "frontendPort": 5444,
              "backendPort": 3389,
              "enableFloatingIP": false
            }
          },
          {
            "name": "[parameters('SQLRDPNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceid(resourceGroup().name,'Microsoft.Network/loadBalancers',parameters('LBName')), '/frontendIPConfigurations/',parameters('LBFE'))]"
              },
              "protocol": "tcp",
              "frontendPort": 5445,
              "backendPort": 3389,
              "enableFloatingIP": false
            }
          },
          {
            "name": "[parameters('WFERDPNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceid(resourceGroup().name,'Microsoft.Network/loadBalancers',parameters('LBName')), '/frontendIPConfigurations/',parameters('LBFE'))]"
              },
              "protocol": "tcp",
              "frontendPort": 5446,
              "backendPort": 3389,
              "enableFloatingIP": false
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "lbID": {
      "value": "[resourceId('Microsoft.Network/loadBalancers',parameters('LBName'))]",
      "type": "string"
    }
  }
}
