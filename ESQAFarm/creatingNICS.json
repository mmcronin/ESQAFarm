{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "adNicName": {
      "type": "string"
    },
    "adNicIPAddress": {
      "type": "string"
    },
    "wfeNicName": {
      "type": "string"
    },
    "wfeNicIPAddress": {
      "type": "string"
    },
    "sqlNicIPAddress": {
      "type": "string"
    },
    "VMSubnetRef": {
      "type": "string"
    },
    "sqlNicName": {
      "type": "string"
    }
  },
  "variables": {
   "adpublicIPAddressName": "adpublicIP",
   "sqlpublicIPAddressName": "sqlpublicIP",
   "wfepublicIPAddressName": "wfepublicIP"
  },
  "resources": [
    {
      "name": "[parameters('adNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
       "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "publicIPAddress": { 
                "id": "[reference(concat('Microsoft.Network/publicIPAddresses',variables('adpublicIPAddressName')))]"
              },
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adNicIPAddress')]",
              "subnet": {
                "id": "[parameters('VMSubnetRef')]"
              }
              }
          }
        ]
      }
    },
    {
      "name": "[parameters('wfeNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
               "publicIPAddress": { 
                 "id": "[reference(concat('Microsoft.Network/publicIPAddresses',variables('wfepublicIPAddressName')))]"
                 },
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('wfeNicIPAddress')]",
              "subnet": {
                "id": "[parameters('VMSubnetRef')]"
              }
              }
          }
        ]
      }
    },
    {
      "name": "[parameters('sqlNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
               "publicIPAddress": { 
                 "id": "[reference(concat('Microsoft.Network/publicIPAddresses',variables('sqlpublicIPAddressName')))]"
                 },
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('sqlNicIPAddress')]",
              "subnet": {
                "id": "[parameters('VMSubnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}
