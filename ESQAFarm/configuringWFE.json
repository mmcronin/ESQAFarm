{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "wfeConfgureModulesURL": {
      "type": "string"
    },
    "wfeConfigurationFunction": {
      "type": "string"
    },
    "wfeVMName": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "sharePointSetupUserAccountUserName": {
      "type": "string"
    },
    "sharePointSetupUserAccountPassword": {
      "type": "securestring"
    },
    "sharePointFarmAccountUserName": {
      "type": "string"
    },
     "sharePointFarmAccountPassword": {
      "type": "securestring"
    },
     "sharePointWebPoolManagedAccountName": {
      "type": "string"
    },
    "sharePointWebPoolManagedAccountPassword": {
      "type": "securestring"
    },
    "sharePointServicePoolManagedAccountName": {
      "type": "string"
    },
    "sharePointServicePoolManagedAccountPassword": {
      "type": "securestring"
    },
    "sharePointFarmPassphrasePassword": {
      "type": "securestring"
    },
    "domainName": {
      "type": "string"
    },
    "ouPath": {
    "type": "string",
    "defaultValue": "OU=Servers,DC=esqa,DC=test"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('wfeVMName'),'/joindomain')]",
      "location": "[parameters('location')]",
        "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
          "settings": {
            "Name": "[parameters('domainName')]",
            "User": "[concat(parameters('domainName'), '\\', parameters('adminUserName'))]",
            "OUPath": "[parameters('ouPath')]",
            "Restart": "true",
            "Options": "3"
          },
        "protectedsettings": {
          "Password": "[parameters('adminPassword')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('wfeVMName'),'/ConfigureSPServer')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.20",
        "autoUpgradeMinorVersion": false,
        "settings": {
          "ModulesUrl": "[parameters('wfeConfgureModulesURL')]",
          "wmfVersion": "4.0",
          "ConfigurationFunction": "[parameters('wfeConfigurationFunction')]",
          "Properties": {
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('adminUserName')]",
              "Password": "PrivateSettingsRef:AdminPassword"
            },
            "SetupUserAccountcreds": {
              "UserName": "[parameters('sharePointSetupUserAccountUserName')]",
              "Password": "PrivateSettingsRef:SharePointSetupUserAccountPassword"
            },
            "FarmAccountcreds": {
              "UserName": "[parameters('sharePointFarmAccountUserName')]",
              "Password": "PrivateSettingsRef:SharePointFarmAccountPassword"
            },
             "WebPoolManagedAccountcreds": {
              "UserName": "[parameters('sharePointWebPoolManagedAccountName')]",
              "Password": "PrivateSettingsRef:SharePointWebPoolManagedAccountPassword"
            },
            "ServicePoolManagedAccountcreds": {
              "UserName": "[parameters('sharePointServicePoolManagedAccountName')]",
              "Password": "PrivateSettingsRef:SharePointServicePoolManagedAccountPassword"
            },
            "Passphrasecreds": {
              "UserName": "ignore",
              "Password": "PrivateSettingsRef:SharePointFarmPassphrasePassword"
            }            
        },
        "protectedSettings": {
          "Items": {
            "AdminPassword": "[parameters('adminPassword')]",
            "SharePointSetupUserAccountPassword": "[parameters('sharePointSetupUserAccountPassword')]",
            "SharePointFarmAccountPassword": "[parameters('sharePointFarmAccountPassword')]",
            "SharePointWebPoolManagedAccountPassword": "[parameters('sharePointWebPoolManagedAccountPassword')]",
            "SharePointServicePooolManagedAccountPassword": "[parameters('sharePointServicePoolManagedAccountPassword')]",
            "SharePointFarmPassphrasePassword": "[parameters('sharePointFarmPassphrasePassword')]"
          }
        }
      }
    }
    }
  ],
  "outputs": {}
}
