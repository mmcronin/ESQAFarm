{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "osDiskVhdUri": { 
      "type": "string", 
      "defaultValue": "https://cwvmbasesdisks382.blob.core.windows.net/vhds/SP2016-QA-Base20170705161333.vhd",
      "metadata": { 
        "Description": "Uri of your user image" 
       }
    },
      "osType": {
       "type": "string",
       "defaultValue": "Windows",
        "metadata": { 
         "Description": "This is the OS that your VM will be running" 
        }
      } ,
    "location": {
      "type": "string"
    },
    "wfeVMName": {
      "type": "string"
    },
    "wfeVMSize": {
      "type": "string"
    },
    "AvailabilitySetName": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "storageAccountNamePrefix": {
      "type": "string"
    },
    "wfeNicName": {
      "type": "string"
    },
    "wfePrepareModulesURL": {
      "type": "string"
    },
    "wfePreparationFunction": {
      "type": "string"
    },
    "DNSServerAddress": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('wfeVMName')]",
      "location": "[parameters('location')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('wfeVMSize')]"
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('AvailabilitySetName'))]"
        },
          "osProfile": {
          "computerName": "[parameters('wfeVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "osDisk": {
            "createOption": "FromImage",
            "name": "osdisk",
             "osType": "[parameters('osType')]",
             "caching": "ReadWrite",
             "image": {
                    "uri": "[parameters('osDiskVhdUri')]"
                     },
            "vhd": {
              "uri": "[concat('http://',parameters('storageAccountNamePrefix'),'1.blob.core.windows.net/vhds/',parameters('wfeVMName'),'-osdisk.vhd')]"
            }
           }
        },
         "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('wfeNicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('storageAccountNamePrefix'),'2.blob.core.windows.net')]"
          }
        }
      }
          },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('wfeVMName'),'/CreateWFEServer')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('wfeVMName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.20",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "ModulesUrl": "[parameters('wfePrepareModulesURL')]",
          "wmfVersion": "5.0",
          "ConfigurationFunction": "[parameters('wfePreparationFunction')]",
          "Properties": {
            "DNSServer": "[parameters('DNSServerAddress')]"
          }
        },
        "protectedSettings": null
      } 
    }
     ],
  "outputs": {}
}
